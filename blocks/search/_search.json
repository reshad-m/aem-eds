{
  "definitions": [
    {
      "title": "Search",
      "id": "search",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Search",
              "model": "search",
              "enableFacets": true,
              "searchCategory": "main"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "search",
      "fields": [
        {
          "component": "text",
          "name": "search",
          "value": "",
          "label": "Search",
          "valueType": "string"
        },
        {
          "component": "boolean",
          "name": "enableFacets",
          "label": "Facets Status",
          "valueType": "boolean",
          "value": true,
          "description": "Toggle on to enable facets in search results, and toggle off to disable them."
        },
        {
          "component": "aem-tag",
          "label": "Facets",
          "name": "facets",
          "valueType": "string",
          "rootPath": "/content/cq:tags",
          "condition": {
            "===": [
              {
                "var": "enableFacets"
              },
              true
            ]
          }
        },
        {
          "component": "select",
          "name": "searchCategory",
          "label": "Search Category",
          "valueType": "string",
          "value": "main",
          "options": [
            {
              "name": "Main",
              "value": "main"
            },
            {
              "name": "News",
              "value": "news"
            },
            {
              "name": "Our People",
              "value": "our-people"
            }
          ]
        },
        {
          "component": "number",
          "name": "resultsPerPage",
          "label": "Results per Page on List",
          "valueType": "number",
          "value": 5,
          "min": 1,
          "max": 50,
          "step": 5,
          "description": "Number of search results to display per page."
        }
      ]
    }
  ],
  "filters": []
}
