{
    "definitions": [
      {
        "title": "Article Cards",
        "id": "article-cards",
        "plugins": {
          "xwalk": {
            "page": {
              "resourceType": "core/franklin/components/block/v1/block",
              "template": {
                "name": "Article Cards",
                "model": "article-cards",
                "enableAutoPopulate": false,
                "articlesToShow": 6,
                "startingPage": 0
              }
            }
          }
        }
      }
    ],
    "models": [
      {
        "id": "article-cards",
        "title": "Article Cards",
        "fields": [
          {
            "component": "boolean",
            "name": "enableAutoPopulate",
            "label": "Toggle Auto-Populate",
            "valueType": "boolean",
            "default": false,
            "description": "Populates Component with pages from the same section"
          },
          {
            "component": "text",
            "name": "indexSource",
            "label": "Index Source",
            "description": "When not auto-populating use this source for pages",
            "condition": { "===": [{ "var": "enableAutoPopulate" }, false] }
          },
          {
            "component": "number",
            "name": "articlesToShow",
            "label": "Number of Articles",
            "required": true,
            "default": 6,
            "min": 1
          },
          {
            "component": "number",
            "name": "startingPage",
            "label": "Starting Page",
            "description": "Start the carousel at this page of the results",
            "required": true,
            "default": 0,
            "min": 0
          },
          {
            "component": "aem-tag",
            "label": "Filter by Tags",
            "description": "Filter pages using these tags",
            "name": "tags",
            "valueType": "string",
            "rootPath": "/content/cq:tags/news"
          }
        ]
      }
    ],
    "filters": []
  }